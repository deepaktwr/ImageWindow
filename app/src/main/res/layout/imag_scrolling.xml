<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrolllll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:padding="@dimen/d_10"
    >
    <LinearLayout
        android:id="@+id/image_vert_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/scroll_rl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/scroll_image_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/scroll_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/scroll_image_1"
                android:text="no details"
                android:padding="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/scroll_rl_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/scroll_view_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue"/>
            <ImageView
                android:id="@+id/scroll_image_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_below="@id/scroll_view_line2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/d_10"/>
            <TextView
                android:id="@+id/scroll_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/scroll_image_2"
                android:text="no details"
                android:padding="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/scroll_rl_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/scroll_view_line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue"/>
            <ImageView
                android:id="@+id/scroll_image_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_below="@id/scroll_view_line3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/d_10"/>
            <TextView
                android:id="@+id/scroll_text_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/scroll_image_3"
                android:text="no details"
                android:padding="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/scroll_rl_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/scroll_view_line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue"/>
            <ImageView
                android:id="@+id/scroll_image_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:layout_below="@id/scroll_view_line4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/d_10"/>
            <TextView
                android:id="@+id/scroll_text_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/scroll_image_4"
                android:text="no details"
                android:padding="10dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>